<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Wrapped - Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        .header {
            background-color: #e50914;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
        }
        .title {
            font-size: 24px;
        }
        .container {
            padding: 20px;
            text-align: center;
        }
        .data-container {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: #fff;
            overflow-y: auto;
            max-height: 300px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        select, button, input[type="text"] {
            padding: 8px;
            margin: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        button {
            background-color: #e50914;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #b20710;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="title">NETFLIX WRAPPED - Results</div>
    </div>
    <div class="container">
        <div id="userInfo" class="data-container"></div>
        <select id="yearSelect">
            <option value="">Select Year</option>
            <option value="2019">2019</option>
            <option value="2020">2020</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
            <option value="2024">2024</option>
        </select>
        <button id="runtimeBtn">Get Runtime</button>
        <div id="runtimeData" class="data-container"></div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Load user info automatically
            $.ajax({
                url: '/api/user-info',
                method: 'GET',
                success: function(data) {
                    let content = '<h3>User Info:</h3><table><tr><th>ID</th><th>Title</th><th>Date</th><th>Season</th><th>Episode</th><th>Title Type</th><th>Actions</th></tr>';
                    data.forEach(function(item) {
                        content += `<tr id="user_${item.id}"><td>${item.id}</td><td class='title-cell'>${item.Title}</td><td class='date-cell'>${item.Date}</td><td class='season-cell'>${item.Season}</td><td class='episode-cell'>${item.Episode}</td><td class='titleType-cell'>${item.titleType}</td><td><button onclick="modifyUser(${item.id})">Modify</button> <button onclick="deleteUser(${item.id})">Delete</button></td></tr>`;
                    });
                    content += '</table>';
                    $('#userInfo').html(content);
                }
            });

            $('#runtimeBtn').click(function() {
                var year = $('#yearSelect').val();
                if (year) {
                    $.ajax({
                        url: `/api/runtime/${year}`,
                        method: 'GET',
                        success: function(data) {
                            let content = '<h3>Runtime Data:</h3><table><tr><th>Year</th><th>Type</th><th>Total Time (min)</th></tr>';
                            data.forEach(function(item) {
                                content += `<tr><td>${item.year}</td><td>${item.titleType}</td><td>${item.totaltime}</td></tr>`;
                            });
                            content += '</table>';
                            $('#runtimeData').html(content);
                        },
                        error: function() {
                            $('#runtimeData').html('<p>No data found for selected year.</p>');
                        }
                    });
                } else {
                    alert('Please select a year.');
                }
            });

            window.modifyUser = function(userId) {
                var userRow = $('#user_' + userId);
                if (userRow.data('isEditing')) {
                    // Collect data from inputs and send to server
                    var Title = userRow.find('.editable-title').val();
                    var Date = userRow.find('.editable-date').val();
                    var Season = userRow.find('.editable-season').val();
                    var Episode = userRow.find('.editable-episode').val();
                    var titleType = userRow.find('.editable-titleType').val();

                    $.ajax({
                        url: `/api/user-info/update/${userId}`,
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ Title, Date, Season, Episode, titleType }),
                        success: function(response) {
                            alert(response.message);
                            // Revert cells to text with updated information
                            userRow.find('.title-cell').text(Title);
                            userRow.find('.date-cell').text(Date);
                            userRow.find('.season-cell').text(Season);
                            userRow.find('.episode-cell').text(Episode);
                            userRow.find('.titleType-cell').text(titleType);
                            userRow.data('isEditing', false);
                        },
                        error: function() {
                            alert('Error updating user info');
                        }
                    });
                } else {
                    // Enable editing
                    userRow.find('.title-cell').html(`<input type="text" class="editable-title" value="${userRow.find('.title-cell').text()}">`);
                    userRow.find('.date-cell').html(`<input type="text" class="editable-date" value="${userRow.find('.date-cell').text()}">`);
                    userRow.find('.season-cell').html(`<input type="text" class="editable-season" value="${userRow.find('.season-cell').text()}">`);
                    userRow.find('.episode-cell').html(`<input type="text" class="editable-episode" value="${userRow.find('.episode-cell').text()}">`);
                    userRow.find('.titleType-cell').html(`<input type="text" class="editable-titleType" value="${userRow.find('.titleType-cell').text()}">`);
                    userRow.data('isEditing', true);
                }
            };

            window.deleteUser = function(userId) {
                if (confirm('Are you sure you want to delete this user info?')) {
                    $.ajax({
                        url: '/api/user-info/delete/' + userId,
                        method: 'POST',
                        success: function(response) {
                            $('#user_' + userId).remove();
                            alert('User info deleted successfully');
                        },
                        error: function() {
                            alert('Error deleting user info');
                        }
                    });
                }
            };
        });
    </script>
</body>
</html>
