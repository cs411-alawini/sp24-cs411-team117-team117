<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta "viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Wrapped - Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        .header {
            background-color: #e50914;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
        }
        .title {
            font-size: 24px;
        }
        .container {
            padding: 20px;
            text-align: center;
        }
        .data-container {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: #fff;
            overflow-y: auto;
            max-height: 300px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        select, button {
            padding: 8px 15px;
            margin: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        button {
            background-color: #e50914;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #b20710;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="title">NETFLIX WRAPPED - Results</div>
    </div>
    <div class="container">
        <div id="userInfo" class="data-container"></div>
        <select id="yearSelect">
            <option value="">Select Year</option>
            <option value="19">2019</option>
            <option value="20">2020</option>
            <option value="21">2021</option>
            <option value="22">2022</option>
            <option value="23">2023</option>
            <option value="24">2024</option>
        </select>
        <button id="runtimeBtn">Get Runtime</button>
        <div id="runtimeData" class="data-container"></div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $.ajax({
                url: '/api/user-info',
                method: 'GET',
                success: function(data) {
                    let content = '<h3>User Info:</h3><table><tr><th>ID</th><th>Title</th><th>Date</th><th>Season</th><th>Episode</th><th>Title Type</th></tr>';
                    data.forEach(function(item) {
                        content += `<tr><td>${item.id}</td><td>${item.Title}</td><td>${item.Date}</td><td>${item.Season}</td><td>${item.Episode}</td><td>${item.titleType}</td></tr>`;
                    });
                    content += '</table>';
                    $('#userInfo').html(content);
                }
            });

            $('#runtimeBtn').click(function() {
                var year = $('#yearSelect').val();
                if (year) {
                    $.ajax({
                        url: `/api/runtime/${year}`,
                        method: 'GET',
                        success: function(data) {
                            let content = '<h3>Runtime Data:</h3><table><tr><th>Year</th><th>Type</th><th>Total Time (min)</th></tr>';
                            data.forEach(function(item) {
                                content += `<tr><td>${item.year}</td><td>${item.titleType}</td><td>${item.totaltime}</td></tr>`;
                            });
                            content += '</table>';
                            $('#runtimeData').html(content);
                        },
                        error: function() {
                            $('#runtimeData').html('<p>No data found for selected year.</p>');
                        }
                    });
                } else {
                    alert('Please select a year.');
                }
            });
        });
    </script>
</body>
</html>
