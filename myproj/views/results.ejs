<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Wrapped - Results</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <style>
    </style>
</head>
<body>
    <div class="header">
        <h1><span class="netflix">Netflix</span> <span class="wrapped">Wrapped</span></h1>
    </div>
    <div class="container">
        <div id="userInfo" class="data-container"></div>
        <div class="data-container">
            <select id="yearSelect">
                <option value="">Select Year</option>
                <option value="19">2019</option>
                <option value="20">2020</option>
                <option value="21">2021</option>
                <option value="22">2022</option>
                <option value="23">2023</option>
                <option value="24">2024</option>
            </select>
            <button id="runtimeBtn" class="button red">Get Runtime</button>
            <div id="runtimeData"></div>
        </div>
        <div class="chart-container">
            <canvas id="runtimeChart"></canvas>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Load user info automatically
            $.ajax({
                url: '/api/user-info',
                method: 'GET',
                success: function(data) {
                    let content = '<h3>User Info:</h3><table><tr><th>ID</th><th>Title</th><th>Date</th><th>Season</th><th>Episode</th><th>Title Type</th><th>Actions</th></tr>';
                    data.forEach(function(item) {
                        content += `<tr id="user_${item.id}"><td>${item.id}</td><td class='title-cell'>${item.Title}</td><td class='date-cell'>${item.Date}</td><td class='season-cell'>${item.Season}</td><td class='episode-cell'>${item.Episode}</td><td class='titleType-cell'>${item.titleType}</td><td><button class="button red" onclick="modifyUser(${item.id})">Modify</button> <button class="button red" onclick="deleteUser(${item.id})">Delete</button></td></tr>`;
                    });
                    content += '</table>';
                    $('#userInfo').html(content);
                }
            });

            $('#runtimeBtn').click(function() {
                var year = $('#yearSelect').val();
                if (year) {
                    $.ajax({
                        url: `/api/runtime/${year}`,
                        method: 'GET',
                        success: function(data) {
                            let content = '<h3>Runtime Data:</h3><table><tr><th>Year</th><th>Type</th><th>Total Time (min)</th></tr>';
                            data.forEach(function(item) {
                                content += `<tr><td>${item.year}</td><td>Type</td><td>${item.totaltime}</td></tr>`;
                            });
                            content += '</table>';
                            $('#runtimeData').html(content);
                            
                            // Prepare data for the chart
                            var types = data.map(item => item.titleType);
                            var totalTimes = data.map(item => item.totaltime);
                            
                            // Create the chart
                            var ctx = document.getElementById('runtimeChart').getContext('2d');
                            var myChart = new Chart(ctx, {
                                type: 'pie',
                                data: {
                                    labels: types,
                                    datasets: [{
                                        label: 'Total Time (min)',
                                        data: totalTimes,
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.5)',
                                            'rgba(54, 162, 235, 0.5)',
                                            'rgba(255, 206, 86, 0.5)',
                                            'rgba(75, 192, 192, 0.5)',
                                            'rgba(153, 102, 255, 0.5)',
                                            'rgba(255, 159, 64, 0.5)'
                                        ],
                                        borderColor: [
                                            'rgba(255, 99, 132, 1)',
                                            'rgba(54, 162, 235, 1)',
                                            'rgba(255, 206, 86, 1)',
                                            'rgba(75, 192, 192, 1)',
                                            'rgba(153, 102, 255, 1)',
                                            'rgba(255, 159, 64, 1)'
                                        ],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: false,
                                    plugins: {
                                        title: {
                                            display: true,
                                            text: 'Runtime by Type'
                                        },
                                        legend: {
                                            display: true,
                                            position: 'right'
                                        }
                                    }
                                }
                            });
                        },
                        error: function() {
                            $('#runtimeData').html('<p>No data found for selected year.</p>');
                        }
                    });
                } else {
                    alert('Please select a year.');
                }
            });

            window.modifyUser = function(userId) {
                var userRow = $('#user_' + userId);
                if (userRow.data('isEditing')) {
                    // Collect data from inputs and send to server
                    var Title = userRow.find('.editable-title').val();
                    var Date = userRow.find('.editable-date').val();
                    var Season = userRow.find('.editable-season').val();
                    var Episode = userRow.find('.editable-episode').val();
                    var titleType = userRow.find('.editable-titleType').val();

                    $.ajax({
                        url: `/api/user-info/update/${userId}`,
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ Title, Date, Season, Episode, titleType }),
                        success: function(response) {
                            alert(response.message);
                            // Revert cells to text with updated information
                            userRow.find('.title-cell').text(Title);
                            userRow.find('.date-cell').text(Date);
                            userRow.find('.season-cell').text(Season);
                            userRow.find('.episode-cell').text(Episode);
                            userRow.find('.titleType-cell').text(titleType);
                            userRow.data('isEditing', false);
                        },
                        error: function() {
                            alert('Error updating user info');
                        }
                    });
                } else {
                    // Enable editing
                    userRow.find('.title-cell').html(`<input type="text" class="editable-title" value="${userRow.find('.title-cell').text()}">`);
                    userRow.find('.date-cell').html(`<input type="text" class="editable-date" value="${userRow.find('.date-cell').text()}">`);
                    userRow.find('.season-cell').html(`<input type="text" class="editable-season" value="${userRow.find('.season-cell').text()}">`);
                    userRow.find('.episode-cell').html(`<input type="text" class="editable-episode" value="${userRow.find('.episode-cell').text()}">`);
                    userRow.find('.titleType-cell').html(`<input type="text" class="editable-titleType" value="${userRow.find('.titleType-cell').text()}">`);
                    userRow.data('isEditing', true);
                }
            };

            window.deleteUser = function(userId) {
                if (confirm('Are you sure you want to delete this user info?')) {
                    $.ajax({
                        url: '/api/user-info/delete/' + userId,
                        method: 'POST',
                        success: function(response) {
                            $('#user_' + userId).remove();
                            alert('User info deleted successfully');
                        },
                        error: function() {
                            alert('Error deleting user info');
                        }
                    });
                }
            };
        });
    </script>
</body>
</html>
