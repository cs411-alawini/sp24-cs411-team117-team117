<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Wrapped - Results</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <style>
        .data-table {
	    width: 100%;
	    border-collapse: collapse;
	    margin-bottom: 20px;
	}

	.data-table th, .data-table td {
	    border: 0px solid white;
	    padding: 8px;
	    text-align: left;
	    border-bottom: 1px solid #ccc; /* Add a border line below each cell */
	}

	.data-table th {
	    background-color: #0000;
	    color: white;
	}

	.data-table tr:nth-child(even) {
	    background-color: #0000;
	}

	.button {
	    padding: 5px 10px;
	    margin: 2px;
	    border-radius: 4px;
	    cursor: pointer;
	    color: white;
	    border: none;
	    background-color: #e50914;
	}

	.button:hover {
	    background-color: #b20710;
	}

    </style>
</head>
<body>
    <div class="header">
        <h1><span class="netflix">Netflix</span> <span class="wrapped">Wrapped</span></h1>
    </div>
    <div class="container">
        <div id="userInfo" class="data-container"></div>
        <div class="data-container runtime-container">
            <select id="yearSelect">
                <option value="">Select Year</option>
                <option value="19">2019</option>
                <option value="20">2020</option>
                <option value="21">2021</option>
                <option value="22">2022</option>
                <option value="23">2023</option>
                <option value="24">2024</option>
            </select>
            <button id="runtimeBtn" class="button">Get Runtime</button>
            <div class="chart-container">
                <canvas id="runtimeChart"></canvas>
            </div>
            <div id="runtimeData" class="runtime-table"></div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            $('#runtimeBtn').click(function() {
                var year = $('#yearSelect').val();
                if (year) {
                    $.ajax({
                        url: `/api/runtime/${year}`,
                        method: 'GET',
                        success: function(data) {
			    let content = '<table class="data-table"><tr><th>Year</th><th>Type</th><th>Total Time (min)</th></tr>';
                            data.forEach(function(item) {
                                content += `<tr><td>${item.year}</td><td>${item.titleType}</td><td>${item.totaltime}</td></tr>`;
                            });
                            content += '</table>';
                            $('#runtimeData').html(content);
                            
                            // Prepare data for the chart
                            var types = data.map(item => item.titleType);
                            var totalTimes = data.map(item => item.totaltime);
                            
                            // Create the chart
                            var ctx = document.getElementById('runtimeChart').getContext('2d');
                            var myChart = new Chart(ctx, {
                                type: 'pie',
                                data: {
                                    labels: types,
                                    datasets: [{
                                        label: 'Total Time (min)',
                                        data: totalTimes,
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.5)',
                                            'rgba(54, 162, 235, 0.5)',
                                            'rgba(255, 206, 86, 0.5)',
                                            'rgba(75, 192, 192, 0.5)',
                                            'rgba(153, 102, 255, 0.5)',
                                            'rgba(255, 159, 64, 0.5)'
                                        ],
                                        borderColor: [
                                            'rgba(255, 99, 132, 1)',
                                            'rgba(54, 162, 235, 1)',
                                            'rgba(255, 206, 86, 1)',
                                            'rgba(75, 192, 192, 1)',
                                            'rgba(153, 102, 255, 1)',
                                            'rgba(255, 159, 64, 1)'
                                        ],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: false,
                                    plugins: {
                                        title: {
                                            display: true,
                                            text: 'Runtime by Type'
                                        },
                                        legend: {
                                            display: true,
                                            position: 'right'
                                        }
                                    }
                                }
                            });
                        },
                        error: function() {
                            $('#runtimeData').html('<p>No data found for selected year.</p>');
                        }
                    });
                } else {
                    alert('Please select a year.');
                }
            });

            // Load user info automatically
            $.ajax({
                url: '/api/user-info',
                method: 'GET',
                success: function(data) {
                    let content = '<table class="data-table"><tr><th>ID</th><th>Title</th><th>Date</th><th>Season</th><th>Episode</th><th>Title Type</th><th>Actions</th></tr>';
                    data.forEach(function(item) {
                        content += `<tr id="user_${item.id}"><td>${item.id}</td><td>${item.Title}</td><td>${item.Date}</td><td>${item.Season}</td><td>${item.Episode}</td><td>${item.titleType}</td><td><button class="button">Modify</button> <button class="button">Delete</button></td></tr>`;
                    });
                    content += '</table>';
                    $('#userInfo').html(content);
                }
            });
        });
    </script>
</body>
</html>
