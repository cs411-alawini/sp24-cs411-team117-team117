<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Titles</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }
        h1 {
            margin-top: 0;
        }
        input[type="text"] {
            padding: 8px;
            margin-bottom: 12px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: left;
        }
        li {
            padding: 8px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Title Search</h1>
        <p>Enter a title name below and click search:</p>
        <input type="text" id="searchInput" placeholder="Enter title name">
        <button id="searchBtn">Search</button>
        <button id="printAllBtn">Print All</button>
        <ul id="titlesList"></ul>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Function to load all titles
            function loadTitles() {
                $.ajax({
                    url: '/api/attendance',
                    method: 'GET',
                    success: function(data) {
                        $('#titlesList').empty(); // Clear existing list
                        data.forEach(function(row) {
                            $('#titlesList').append('<li>' + row.Title + '</li>');
                        });
                    },
                    error: function() {
                        alert('Failed to load user titles.');
                    }
                });
            }

            // Event listener for search button click
            $('#searchBtn').click(function() {
                var searchTerm = $('#searchInput').val().trim();

                if (searchTerm === '') {
                    alert('Please enter a title name to search.');
                    return;
                }

                // Perform search
                $.ajax({
                    url: '/api/search',
                    method: 'GET',
                    data: { title: searchTerm },
                    success: function(data) {
                        $('#titlesList').empty(); // Clear existing list
                        if (data.length === 0) {
                            $('#titlesList').append('<li>No results found.</li>');
                        } else {
                            data.forEach(function(row) {
                                $('#titlesList').append('<li>' + row.primaryTitle + ' - ' + row.startYear + '</li>');
                            });
                        }
                    },
                    error: function() {
                        alert('Failed to search for titles.');
                    }
                });
            });

            // Event listener for print all button click
            $('#printAllBtn').click(function() {
                // Load all titles
                loadTitles();
            });

             // Event listener for update button click
            $('#updateBtn').click(function() {
                var id = $('#updateId').val();
                var present = $('#updatePresent').val(); // Assuming present value is >

                // Perform update
                $.ajax({
                    url: '/api/netflix-wrapped/modify/' + id,
                    method: 'POST',
                    data: { present: present },
                    success: function(response) {
                         alert(response.message);
                         // Reload titles after successful update
                         loadTitles();
                },
                error: function() {
                    alert('Failed to update attendance record.');
                }
            });
        });
        });
    </script>
</body>
</html>

