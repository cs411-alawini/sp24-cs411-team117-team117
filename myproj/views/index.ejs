<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Titles</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        .header {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 999;
        }
        .title {
            font-size: 24px;
        }
        .search-bar {
            margin-top: 50px;
            padding: 20px;
            text-align: center;
        }
        .search-text {
            margin-bottom: 10px;
        }
        input[type="text"] {
            padding: 8px;
            width: calc(100% - 24px);
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-left: 10px;
        }
        button:hover {
            background-color: #0056b3;
        }
        .container {
            margin-top: 120px; /* Adjusted margin to accommodate fixed header and space for title */
            padding: 20px;
            text-align: center;
        }
        .inner-container {
            background-color: #007bff; /* Changed background color to blue */
            border: 2px solid #000; /* Added black border */
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: left;
            overflow-y: auto;
            max-height: calc(100vh - 300px); /* Adjusted max-height to fit remaining space */
        }
        li {
            padding: 8px 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="title">Netflix Wrapped</div>
    </div>
    <div class="search-bar">
        <div class="search-text">Search a title in the database:</div>
        <input type="text" id="searchInput" placeholder="Enter title name">
        <button id="searchBtn">Search</button>
        <button id="printAllBtn">Print All Titles</button>
    </div>
    <div class="container">
        <div class="inner-container">
            <ul id="titlesList"></ul>
        </div>
        <button id="calculateRuntimeBtn">Calculate Runtime</button> <!-- Moved button outside inner container -->
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Event listener for search button click
            $('#searchBtn').click(function() {
                var searchTerm = $('#searchInput').val().trim();

                if (searchTerm === '') {
                    alert('Please enter a title name to search.');
                    return;
                }

                // Perform search
                $.ajax({
                    url: '/api/search',
                    method: 'GET',
                    data: { title: searchTerm },
                    success: function(data) {
                        $('#titlesList').empty(); // Clear existing list
                        if (data.length === 0) {
                            $('#titlesList').append('<li>No results found.</li>');
                        } else {
                            data.forEach(function(row) {
                                $('#titlesList').append('<li>' + row.primaryTitle + ' - ' + row.startYear + '</li>');
                            });
                        }
                    },
                    error: function() {
                        alert('Failed to search for titles.');
                    }
                });
            });

            // Event listener for print all button click
            $('#printAllBtn').click(function() {
                $.ajax({
                    url: '/api/attendance',
                    method: 'GET',
                    success: function(data) {
                        $('#titlesList').empty(); // Clear existing list
                        if (data.length === 0) {
                            $('#titlesList').append('<li>No titles found.</li>');
                        } else {
                            data.forEach(function(row) {
                                $('#titlesList').append('<li>' + row.Title + '</li>');
                            });
                        }
                    },
                    error: function() {
                        alert('Failed to load titles.');
                    }
                });
            });

            // Event listener for calculate runtime button click
            $('#calculateRuntimeBtn').click(function() {
                $.ajax({
                    url: '/api/calculate-runtime',
                    method: 'GET',
                    success: function(data) {
                        // Clear existing table
                        $('#runtimeTable').remove();

                        // Create and populate table
                        var table = $('<table id="runtimeTable"></table>');
                        var headerRow = $('<tr><th>Total Runtime</th><th>Year</th><th>Title Type</th></tr>');
                        table.append(headerRow);
                        data.forEach(function(row) {
                            var newRow = $('<tr><td>' + row.totaltime + ' minutes</td><td>' + row.year + '</td><td>' + row.titleType + '</td></tr>');
                            table.append(newRow);
                        });
                        $('.container').append(table);
                    },
                    error: function() {
                        alert('Failed to calculate runtime.');
                    }
                });
            });
        });
    </script>
</body>
</html>
