<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Wrapped</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        .header {
            background-color: #e50914;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
        }
        .title {
            font-size: 24px;
        }
        .container {
            padding: 20px;
            text-align: center;
        }
        .upload-instructions {
            margin-top: 50px;
            padding: 20px;
            text-align: left;
        }
        .upload-area {
            border: 2px dashed #ccc;
            border-radius: 4px;
            padding: 20px;
            margin-top: 20px;
            background-color: #fff;
        }
        .upload-btn {
            background-color: #e50914;
            border: none;
            padding: 10px 20px;
            color: #fff;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        .upload-btn:hover {
            background-color: #b20710;
        }
        .runtime-table-container, .user-info-table-container {
            height: 200px;
            overflow-y: scroll;
            margin-top: 20px;
            display: none;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        /* Loading Animation */
        .loader {
            border: 16px solid #f3f3f3; /* Light grey */
            border-top: 16px solid #3498db; /* Blue */
            border-radius: 50%;
            width: 120px;
            height: 120px;
            animation: spin 2s linear infinite;
            display: none; /* Hidden by default */
            position: fixed;
            left: 50%;
            top: 50%;
            margin-left: -60px; /* Offset by half the width */
            margin-top: -60px; /* Offset by half the height */
            z-index: 1000;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="title">NETFLIX WRAPPED</div>
    </div>
    <div class="container">
        <div class="upload-instructions">
            <p>Intro to Netflix Wrapped!</p>
            <p>Some instructions on downloading Netflix history.</p>
        </div>
        <div class="upload-area">
            <form id="uploadForm" enctype="multipart/form-data">
                <input type="file" name="csvFile" id="csvFile">
                <input type="button" value="Upload Netflix History" class="upload-btn" id="uploadBtn">
            </form>
        </div>
        <input type="button" value="Print User Info" class="upload-btn" id="printUserInfoBtn">
        <div class="loader" id="loader"></div>
        <div class="user-info-table-container" id="userInfoTableContainer">
            <table id="userInfoTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Season</th>
                        <th>Episode</th>
                        <th>Title Type</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- User info rows will be added here -->
                </tbody>
            </table>
        </div>
        <div class="runtime-table-container" id="runtimeTableContainer">
            <table id="runtimeTable">
                <thead>
                    <tr>
                        <th>Total Time (minutes)</th>
                        <th>Year</th>
                        <th>Title Type</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Runtime rows will be added here -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#uploadBtn').click(function() {
                var formData = new FormData($('#uploadForm')[0]);
                $.ajax({
                    url: '/api/upload-csv',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    beforeSend: function() {
                        $('#loader').show(); // Show the loader before sending the data
                    },
                    success: function(data) {
                        var tbody = $('#runtimeTable tbody');
                        tbody.empty(); // Clear existing rows
                        data.forEach(function(row) {
                            var tr = $('<tr>');
                            tr.append('<td>' + row.totaltime + '</td>');
                            tr.append('<td>' + row.year + '</td>');
                            tr.append('<td>' + row.titleType + '</td>');
                            tbody.append(tr);
                        });
                        $('#runtimeTableContainer').show(); // Display the table
                        $('#loader').hide(); // Hide the loader when done
                    },
                    error: function() {
                        alert('Failed to upload file and calculate runtime.');
                        $('#loader').hide(); // Hide the loader on error
                    }
                });
            });

            $('#printUserInfoBtn').click(function() {
                $.ajax({
                    url: '/api/user-info',
                    method: 'GET',
                    beforeSend: function() {
                        $('#loader').show(); // Show the loader before sending the request
                    },
                    success: function(data) {
                        var tbody = $('#userInfoTable tbody');
                        tbody.empty(); // Clear existing rows
                        data.forEach(function(user) {
                            var tr = $('<tr>');
                            tr.append('<td>' + user.id + '</td>');
                            tr.append('<td>' + user.Title + '</td>');
                            tr.append('<td>' + user.Date + '</td>');
                            tr.append('<td>' + user.Season + '</td>');
                            tr.append('<td>' + user.Episode + '</td>');
                            tr.append('<td>' + user.titleType + '</td>');
                            tbody.append(tr);
                        });
                        $('#userInfoTableContainer').show(); // Make the table visible
                        $('#loader').hide(); // Hide the loader when done
                    },
                    error: function() {
                        alert('Failed to fetch user info.');
                        $('#loader').hide(); // Hide the loader on error
                    }
                });
            });
        });
    </script>
</body>
</html>
